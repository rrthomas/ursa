{
  "name": "@ursalang/ursa",
  "description": "A simple, comfortable, general-purpose language",
  "version": "0.1.17",
  "author": "Reuben Thomas",
  "license": "GPL-3.0-or-later",
  "repository": "ursalang/ursa",
  "bin": {
    "ursa": "./bin/run.js"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "ohm-js": "^17.1.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@ohm-js/cli": "^2.0.0",
    "@tsconfig/node18": "^18.0.0",
    "@types/argparse": "^2.0.10",
    "@types/node": "^20.3.0",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ava": "^6.0.0",
    "c8": "^7.14.0",
    "depcheck": "^1.4.3",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "execa": "^8.0.0",
    "pre-push": "^0.1.4",
    "tmp": "^0.2.1",
    "tsx": "^4.6.2",
    "typescript": "~5.1.3"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "files": [
    "TODO.md",
    "/bin/run.js",
    "/lib"
  ],
  "main": "lib/compiler.js",
  "scripts": {
    "lint": "eslint . --ext .ts && depcheck",
    "prebuild": "node --print \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
    "build": "tsc --build && cp src/ursa/prelude.ursa lib/ursa/",
    "clean": "tsc --build --clean",
    "generate": "ohm generateBundles --withTypes --esm 'src/grammar/*.ohm' && mkdir -p lib/grammar/ && cp src/grammar/*ohm-bundle.js src/grammar/*ohm-bundle.d.ts lib/grammar/",
    "test": "npm run generate && npm run build && ava",
    "test-ursa": "ava src/ursa/ursa.test.ts",
    "test-ark": "ava src/ark/ark.test.ts",
    "coverage": "NODE_ENV=coverage c8 --extension .ts npm test",
    "loc": "cloc --exclude-ext=js --force-lang='JavaScript,ohm' --not-match-f='\\.test\\.ts|\\.ohm-bundle\\.d\\.ts' src",
    "diff-check": "git diff --exit-code",
    "prepublishOnly": "npm run diff-check && git push --all",
    "postpublish": "git push --tags --no-verify && gh release create $(git describe) -t \"Release $(git describe)\"",
    "no-diff-or-untracked": "git diff --exit-code && git ls-files --other --directory --exclude-standard | sed q1"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      },
      "compile": "tsc"
    },
    "workerThreads": false
  },
  "pre-push": [
    "lint",
    "no-diff-or-untracked",
    "clean",
    "test"
  ],
  "type": "module",
  "types": "lib/compiler.d.ts"
}
