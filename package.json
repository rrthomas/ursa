{
  "name": "hak",
  "version": "0.0.1",
  "description": "A simple, comfortable, general-purpose language",
  "dependencies": {
    "ohm-js": "^17.1.0",
    "tslib": "^2.5.3"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@ohm-js/cli": "^2.0.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^20.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "ava": "^5.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "lint": "eslint . --ext .ts && depcheck",
    "prebuild": "node --print \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "generate": "ohm generateBundles --withTypes 'src/*.ohm' && cp src/*ohm-bundle.js dist/",
    "test": "npm run generate && npm run build && ava",
    "test-hak": "ava src/hak.test.ts",
    "test-lisp": "ava src/haklisp.test.ts"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": "tsc"
    }
  }
}