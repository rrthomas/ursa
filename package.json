{
  "name": "@sc3d/hak",
  "description": "A simple, comfortable, general-purpose language",
  "version": "0.0.1",
  "author": "Reuben Thomas",
  "bin": {
    "hak": "./bin/run.js"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "debug": "^4.3.4",
    "fs-extra": "^11.1.1",
    "ohm-js": "^17.1.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@ohm-js/cli": "^2.0.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/argparse": "^2.0.10",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.8",
    "@types/diff": "^5.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "ava": "^5.3.0",
    "c8": "^7.14.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "depcheck": "^1.4.3",
    "diff": "^5.1.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "execa": "^6.1.0",
    "mocha": "^10.2.0",
    "pre-push": "^0.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "files": [
    "TODO.md",
    "/bin/run.js",
    "/lib"
  ],
  "homepage": "https://github.com/rrthomas/nancy",
  "license": "GPL-3.0-or-later",
  "main": "lib/index.js",
  "repository": "rrthomas/nancy",
  "scripts": {
    "lint": "eslint . --ext .ts && depcheck",
    "prebuild": "node --print \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "generate": "ohm generateBundles --withTypes --esm 'src/*/*.ohm' && cp src/hak/*ohm-bundle.js lib/hak/ && cp src/haklisp/*ohm-bundle.js lib/haklisp/",
    "test": "npm run generate && npm run build && mocha --forbid-only \"test/**/*.test.ts\"",
    "coverage": "NODE_ENV=coverage c8 --extension .ts npm test",
    "loc": "cloc src/**/*.ts",
    "diff-check": "git diff --exit-code",
    "prepublishOnly": "npm run diff-check && git push --all",
    "postpublish": "git push --tags --no-verify && gh release create $(git describe) -t \"Release $(git describe)\"",
    "test-hak": "ava src/hak/hak.test.ts",
    "test-lisp": "ava src/haklisp/haklisp.test.ts"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      },
      "compile": "tsc"
    }
  },
  "type": "module",
  "types": "lib/index.d.ts"
}
