{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}